<!DOCTYPE html>
<html>

<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />

    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

    <body>

        <div style="background-color: navy; color: white; " class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">

                    <button type="button"  class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    @Html.ActionLink("Estacionamento WSA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

                </div>
                <div class="navbar-collapse collapse">

                    <ul class="nav navbar-nav" >
                        <li >@Html.ActionLink("Início", "Index", "Home")            </li>
                        <li >@Html.ActionLink("Pessoa Física", "Index", "PessoaFisica")    </li>
                        <li >@Html.ActionLink("Pessoa Jurídica", "Index", "PessoaJuridica")  </li>
                    </ul>

                </div>
            </div>
        </div>

        <div class="container body-content">

            @RenderBody()

            <hr />

            <footer> <p>&copy; @DateTime.Now.Year - Estacionamento WSA</p> </footer>

        </div>
        
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        @RenderSection("scripts", required: false)

    </body>

</html>
